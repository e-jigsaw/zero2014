body
  background-color #CCEA97

.wrapper
  margin 0 auto

header
  background-color #fff

  .logo
    text-align center
    line-height 0

  .links
    text-align center

    a
      margin 4px
      font-size 10px
      color #009900
      text-decoration none

      &:hover
        background-color #00C9FF

.dottedAnchor
  text-decoration none
  border-bottom 1px dotted #aaa
  color #781A53

  &:hover
    color #FF1787
    border-bottom 0

.center
  margin 0 auto

.align-center
  text-align center

.max
  width 100%

#main
  background-color #fff
  padding 1em

  h1
    font-size 24px

  .desc
    margin-bottom .6em

footer
  p
    color #aaa
    text-align center
    font-size 12px
    margin 0
    padding 0

@media screen and (min-width: 790px)
  .wrapper
    width 790px

@media screen and (min-width: 630px)
  .pure-u-sm-1-2
    width 50%
    *width 49.9690%

  .pure-u-sm-1-4
    width 25%
    *width 24.9690%

  .pure-u-sm-3-4
    width 75%
    *width 74.9690%

  .pure-u-sm-1-1
    width 100%

  .pure-u-sm-1-8
    width 12.5000%
    *width 12.4690%

  .pure-u-sm-5-8
    width 62.5000%
    *width 62.4690%

  .pure-u-sm-1-6
    width 16.6667%
    *width 16.6357%

  header
    .logo
      text-align left
      img
        margin-left 5px

    .links
      text-align right

      a
        margin 10px
        font-size 12px

@media screen and (max-width: 414px)
  .wrapper
    width 414px

@media screen and (max-width: 375px)
  .wrapper
    width 375px

@media screen and (max-width: 320px)
  .wrapper
    width 320px
